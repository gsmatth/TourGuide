<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_view_generic"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/site_image"
        android:layout_width="@dimen/list_item_image_width"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/list_item_image_padding_right"
        android:layout_marginLeft="@dimen/list_item_image_margin_left"
        android:paddingEnd="@dimen/list_item_image_padding_end"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="@dimen/list_item_linear_layout_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:paddingLeft="@dimen/list_item_linear_layout_padding_left"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_title_text_size"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_description_margin_bottom"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_item_address_margin_bottom"/>
        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="@dimen/list_item_star_width"
        android:layout_height="@dimen/list_item_star_height"
        android:layout_weight="1"
        android:paddingRight="@dimen/list_item_star_padding_right"
        android:paddingBottom="@dimen/list_item_star_padding_bottom"
        android:paddingTop="@dimen/list_item_star_padding_top"
        />
</LinearLayout>